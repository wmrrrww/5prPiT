<Window x:Class="_5prPiT.AuthPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_5prPiT"
        mc:Ignorable="d"
        Title="AuthPage" Height="300" Width="400">
    <Grid>
        <TextBox x:Name="LoginTextBox" Width="200" Height="30" Margin="100,50,100,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="PasswordTextBox" Width="200" Height="30" Margin="100,100,100,0" VerticalAlignment="Top"/>
        <Button Content="Login" Width="100" Height="30" Margin="150,150,150,0" VerticalAlignment="Top" Click="LoginButton_Click"/>
    </Grid>
</Window>